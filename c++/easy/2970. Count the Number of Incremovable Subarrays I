class Solution {
public:
    bool isSorted(vector<int>& nums, int start, int end){
        for (int i = start + 1; i <= end;i++){
            if (nums[i] <= nums[i - 1]) {
                return false;
            }
        }
        return true;
    }
    int incremovableSubarrayCount(vector<int>& nums) {
        int n = nums.size();
        if (n < 2)  return n;
        int ans = 0;

        for (int i = 0; i < n; i++){
            for (int j = i; j < n; j++){
                if(isSorted(nums, 0, i - 1) && isSorted(nums, j + 1, n - 1) )    {
                    if (i == 0 || j == n - 1 || nums[i - 1] < nums[j + 1]){
                        ans++;
                    }  
                    
                }
            }
        }


        return ans;
    }
};
