class CustomStack {
    int size;
    vector<int> vec;
    int current;
public:
    CustomStack(int maxSize) {
        current = 0;
        size = maxSize;
    }
    
    void push(int x) {
        if (current != size){
            current++;
            vec.push_back(x);
        }
        
    }
    
    int pop() {
        if (current != 0){
            int temp = vec[--current];
            vec.pop_back();
            return temp;
        }
        return -1;
    }
    
    void increment(int k, int val) {
        k = min(k, current);
        for (int i = 0; i < k; i++){
            vec[i] += val;
        }
    }
};

/**
 * Your CustomStack object will be instantiated and called as such:
 * CustomStack* obj = new CustomStack(maxSize);
 * obj->push(x);
 * int param_2 = obj->pop();
 * obj->increment(k,val);
 */
