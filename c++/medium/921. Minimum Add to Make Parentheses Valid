class Solution {
public:
    int minAddToMakeValid(string s) {
        int l = 0, ans = 0;
        for (char & c : s){
            if (c == '('){
                l++;
            }
            else if (l < 1){
                ans++;
            }
            else{
                l--;
            }
        }
        ans += l;
        return ans;
    }
};
