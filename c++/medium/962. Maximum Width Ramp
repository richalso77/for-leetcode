class Solution {
public:
    int maxWidthRamp(vector<int>& nums) {
        stack<int> start;
        start.push(0);
        int numsSize = nums.size();
        for (int i = 1; i < numsSize; i++){
            if (nums[start.top()] > nums[i]){
                start.push(i);
            }
        }

        int maxWidth = 0;

        for (int i = numsSize - 1; i >= 0; i--){
            if (start.empty())   break;
            while(!start.empty() && nums[start.top()] <= nums[i]){
                maxWidth = max(maxWidth, i - start.top());
                start.pop();
            }
        }
        return maxWidth;
    }
};
